<%= form_with model: @user do |form| %>
  <% @user.errors.full_messages.each do |error| %>
    <div>
      <%= error %>
    </div>
  <% end %>

  <div class="flex flex-col gap-1 min-w-72">
    <%= form.label :email, class: "font-semibold" %>
    <%= form.email_field :email, required: true, class: "rounded-2xl border-2 focus:border-main-color" %>
  </div>

  <div class="flex flex-col gap-1 min-w-72">
    <%= form.label :name, class: "font-semibold" %>
    <%= form.text_field :name, required: true, class: "rounded-2xl border-2 focus:border-main-color" %>
  </div>

  <div class="flex flex-col gap-1 min-w-72">
    <%= form.label :username, class: "font-semibold" %>
    <%= form.text_field :username, required: true, class: "rounded-2xl border-2 focus:border-main-color" %>
  </div>

  <div class="flex flex-col gap-1 min-w-72">
    <%= form.label :password, class: "font-semibold" %>
    <%= form.password_field :password, required: true, class: "rounded-2xl border-2 focus:border-main-color" %>
  </div>

  <%= form.submit t('.register'), class: "bg-main-color text-white px-2 py-2 rounded-2xl mt-4 w-full active:scale-95 duration-500" %>
<% end %>
