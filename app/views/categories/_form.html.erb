<%= form_with model: @category do |form| %>
  <% @category.errors.full_messages.each do |error| %>
    <div>
      <%= error %>
    </div>
  <% end %>

  <div class="flex flex-col gap-1 max-w-72">
    <%= form.label :name, class: "font-semibold" %>
    <%= form.text_field :name, class: "rounded-2xl border-2 focus:border-main-color" %>
  </div>

  <%= form.submit class: "bg-main-color text-white px-2 py-2 rounded-2xl mt-4 max-w-36" %>
<% end %>
