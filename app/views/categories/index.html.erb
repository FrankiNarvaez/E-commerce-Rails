<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal">
    <div data-action="click->modal#close" class="fixed z-10 w-full h-full top-0 left-0 bg-black bg-opacity-40"></div>
    <div data-modal-target="sidebar" class="fixed top-0 right-0 z-20 w-1/2 sm:w-3/6 lg:w-2/6 h-full bg-white overflow-y-scroll shadow flex flex-col ease-in-out duration-300 p-5">
      <p class="cursor-pointer mb-4" data-action="click->modal#close">❌</p>
      <h2 class="text-3xl font-bold mb-4 mt-"><%= t('.title') %></h2>

      <%= render partial: "category", collection: @categories %>

      <%= link_to t('.add_category'), new_category_path, class: "bg-main-color text-white px-2 py-2 rounded-2xl mt-12 w-full" %>
    </div>
  </div>
<% end %>
